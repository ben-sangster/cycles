<?xml version="1.0" encoding="utf-8"?>
<manifest>
   <help url="http://help.dmzdev.org/faqs/user-guides/cycles-demo"/>
   <config file="config/render.xml"/>
   <config file="config/resource.xml"/>
   <config file="config/runtime.xml"/>
   <config file="config/common.xml"/>
   <config file="config/audio.xml"/>
   <config file="config/input.xml"/>
   <config file="config/game.xml"/>
   <config file="config/lua.xml"/>
   <single-player>
      <config file="config/mcp.xml"/>
      <config file="config/drone.xml"/>
   </single-player>
   <multi-player>
      <config file="config/net.xml"/>
      <mcp>
         <config file="config/mcp.xml"/>
      </mcp>
      <drone>
         <config file="config/drone.xml"/>
      </drone>
   </multi-player>
   <color>
      <type text="Red">
         <config file="config/cycle.xml"/>
         <config file="config/cycle_overlay.xml"/>
         <config file="config/cycle_red.xml"/>
      </type>
      <type text="Orange">
         <config file="config/cycle.xml"/>
         <config file="config/cycle_overlay.xml"/>
         <config file="config/cycle_orange.xml"/>
      </type>
      <type text="Yellow">
         <config file="config/cycle.xml"/>
         <config file="config/cycle_overlay.xml"/>
         <config file="config/cycle_yellow.xml"/>
      </type>
      <type text="Blue">
         <config file="config/cycle.xml"/>
         <config file="config/cycle_overlay.xml"/>
         <config file="config/cycle_blue.xml"/>
      </type>
      <type text="Spectator">
         <config file="config/spectator.xml"/>
      </type>
   </color>
   <aa scope="dmz.render.viewer.aa.samples"/>
   <screen scope="dmz.render.viewer.window.screen">
      <resolution text="Full Screen">
         <attribute scope="dmz.render.viewer.window.fullscreen" value="true"/>
      </resolution>
      <resolution text="640x480">
         <attribute scope="dmz.render.viewer.window.center" value="true"/>
         <attribute scope="dmz.render.viewer.window.width" value="640"/>
         <attribute scope="dmz.render.viewer.window.height" value="480"/>
      </resolution>
      <resolution text="800x600">
         <attribute scope="dmz.render.viewer.window.center" value="true"/>
         <attribute scope="dmz.render.viewer.window.width" value="800"/>
         <attribute scope="dmz.render.viewer.window.height" value="600"/>
      </resolution>
      <resolution text="1024x768">
         <attribute scope="dmz.render.viewer.window.center" value="true"/>
         <attribute scope="dmz.render.viewer.window.width" value="1024"/>
         <attribute scope="dmz.render.viewer.window.height" value="768"/>
      </resolution>
   </screen>
</manifest>
